@model QuickCrew.Shared.Models.JobPostingDto

@{
    ViewData["Title"] = "Job Details";
}
@* TODO: Location and Category should be added *@
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="text-muted">Location</h5>
                    <p>@Model.Location</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Category</h5>
                    <span class="badge bg-primary">@Model.CategoryName</span>
                </div>
            </div>


            <h5 class="text-muted">Description</h5>
            <div class="p-3 bg-light rounded mb-3">
                @Model.Description
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a href="#" class="btn btn-primary">
                    <i class="bi bi-send"></i> Apply Now
                </a>
            </div>
        </div>
        <div class="card-footer text-muted">
            Posted on @Model.CreatedDate.ToString("MMMM dd, yyyy")
        </div>
    </div>
</div>