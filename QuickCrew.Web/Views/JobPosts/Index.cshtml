@model List<QuickCrew.Shared.Models.JobPostingDto>

@{
    ViewData["Title"] = "Job Posts";
}
@* TODO: Location and Category should be added  *@
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Current Job Posts</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Post
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var job in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@job.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@job.Title</h6> @* To be replaced with the location  *@
                        <p class="card-text">@job.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@job.Description</span>@* To be replaced with the location  *@
                            <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        @*<small class="text-muted">Posted on @job.CreatedDate.ToString("d")</small>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>