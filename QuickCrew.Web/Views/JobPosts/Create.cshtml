@model QuickCrew.Shared.Models.JobPostingDto

@{
    ViewData["Title"] = "Create New Job Posting";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Create New Job Posting</h1>
            <h4 class="text-center text-muted mb-5">Job Posting Details</h4>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" placeholder="Title" />
                    <label asp-for="Title">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="SlotsNeeded" class="form-control" placeholder="Slots Needed" type="number" />
                    <label asp-for="SlotsNeeded">Slots Needed</label>
                    <span asp-validation-for="SlotsNeeded" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="LocationId" class="form-select" asp-items="ViewBag.Locations as SelectList">
                        <option value="">-- Select Location --</option>
                    </select>
                    <label asp-for="LocationId">Location</label>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories as SelectList">
                        <option value="">-- Select Category --</option>
                    </select>
                    <label asp-for="CategoryId">Category</label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Create</button>
                    <a asp-action="MyJobs" class="btn btn-secondary btn-lg px-4">Back to My Jobs</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}