@model QuickCrew.Shared.Models.JobPostingDto

@{
    ViewData["Title"] = "Create New Job Posting";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<h4 class="mb-3">Job Posting Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="JobPosts" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="form-floating mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Job Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Job Description" style="height: 100px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="SlotsNeeded"></label>
                <input asp-for="SlotsNeeded" class="form-control" type="number" placeholder="Number of Slots Needed" />
                <span asp-validation-for="SlotsNeeded" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="LocationId">Location</label> @* Показва "Location" като етикет *@
                <select asp-for="LocationId" class="form-select" asp-items="ViewBag.Locations">
                    <option value="">-- Select Location --</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="CategoryId">Category</label> @* Показва "Category" като етикет *@
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="MyJobs" class="btn btn-secondary">Back to My Jobs</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}